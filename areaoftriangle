
main = do
       putStrLn("Ennter magnitude of 3 sides of triangle")
       ain <- getLine
       let a = (read ain :: Float)
       bin <- getLine
       let b = (read bin :: Float)
       cin <- getLine
       let c = (read cin :: Float)
    --   int doesnt work
       let s =(a+b+c)/2
       let area= sqrt(s*(s-a)*(s-b)*(s-c))
       putStrLn("The area of triangle is ")
       print(area)
